mixin choice(mods)
  -
    const baseName = 'choice'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }
    const cardItems = [
      {
        title:'Классик',
        text:'Полная защита авто без ограничений по возрасту и стажу вождения',
        src:'../../images/choice/classic.png'
      },
      {
        title:'Оптима',
        text:'Полная защита автомобиля с экономией до 30% для уверенных водителей',
        src:'../../images/choice/classic.png'
      },
      {
        title:'Формула 50+',
        text:'КАСКО с двумя платежами: вторую часть вносите при наступлении страхового случая',
        src:'../../images/choice/classic.png'
      },
      {
        title:'Профи',
        text:'Выгода до 70% для водителей со стажем',
        src:'../../images/choice/classic.png'
      },
      {
        title:'Легкое КАСКО',
        text:'Базовые риски всего за 1900 ₽',
        src:'../../images/choice/classic.png'
      },
      {
        title:'Помощь',
        text:'Защита автомобиля по вине другого участника, даже если у того нет ОСАГО, всего от 1990 ₽',
        src:'../../images/choice/classic.png'
      }
    ]
  .choice(class=allMods)&attributes(attributes)
    .section__head
      .section__title
        +ui-h2("Выберите программу КАСКО", "--semibold")
      .section__text
        +ui-p2("Вы можете получить индивидуальное предложение либо выбрать одну из наших программ — в зависимости от стажа, стиля вождения и состояния автомобиля")
    .choice__content
      each item in cardItems
        .choice-item
          .choice-item__image 
            img(src=item.src, alt="card-image")
          .choice-item__title
            +ui-h4(item.title)
          .choice-item__text
            +ui-p2(item.text)
    +ui-button({p3: "Сравнить программы"}, "--border")
    block