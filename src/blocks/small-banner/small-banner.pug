mixin small-banner(sectionHeadText, bannerImageSrc, mods)
  -
    const baseName = 'small-banner'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .small-banner(class=allMods)&attributes(attributes)
    .small-banner__content
      .small-banner__info
        +section-head({h2: sectionHeadText.h2, p2: sectionHeadText.p2}, "small-banner,--xs")
        block smallBannerInfo
      .small-banner__image
        img(src=bannerImageSrc, alt="small-banner-image")

