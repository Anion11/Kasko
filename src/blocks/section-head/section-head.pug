mixin section-head(text, mods)
  -
    const baseName = 'section-head'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .section-head(class=allMods)&attributes(attributes)
    if text.h2
      +ui-h2(text.h2, "--semibold")
    if text.p2
      +ui-p2(text.p2)
    block
