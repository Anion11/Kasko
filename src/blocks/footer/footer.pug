footer.footer
  .inner
    form(action="").footer__helper
      +ui-input-search("helper","Чем вам помочь?", "--footer")
      .footer__feedback
        +ui-h3("8-800-100-82-00", "--white, --montserrat")
        +ui-p3("Федеральный контактный центр")
    nav.footer__menu
      .footer__menu-content
        each menu in footerMenu
          .footer__menu-item
            .footer__menu-head
              +ui-p2(menu.title, "--white")
              .footer__menu-toggle
            .footer__menu-body
              each menuItem in menu.list
                div
                  a(href=menuItem.link).footer__menu-link
                    +ui-p3(menuItem.name)
      .footer__utils
        .footer__utils-item.tablet-disp
          .footer__utils-app
            a(href="#").footer__app-image
              img(src="../../images/footer/mob-app.png", alt="mob-app")
            .footer__app-text
              +ui-p2("Мобильное приложение", "--white")
              +ui-p3("Загрузите приложение для iOS и Android", "--regular")
        .footer__utils-item
          each versionItem in UtilsVersions
            .footer__utils-version
              a(href=versionItem.link).footer__version-image
                img(src=versionItem.src, alt=versionItem.alt)
              a(href=versionItem.link)
                +ui-p3(versionItem.text, "--white")
          .footer__utils-social
            each socialItem in UtilsSocialButtons
              a(href=socialItem.link onmouseover=`this.firstChild.src="${socialItem.src}-hover.png";` onmouseout=`this.firstChild.src="${socialItem.src}.png";`).footer__social-image
                img(src=socialItem.src + ".png", alt=socialItem.alt)
    .footer__copyrights
