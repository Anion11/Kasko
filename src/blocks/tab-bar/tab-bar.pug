mixin tab-bar(mods)
  -
    const baseName = 'tab-bar'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }
    const tabBarMenu = [
      { src: '../../images/tab-bar/main.png', alt: 'main', text: 'Главная', link: '#'},
      { src: '../../images/tab-bar/chat.png', alt: 'chat', text: 'Чат', link: '#'},
      { src: '../../images/tab-bar/menu.png', alt: 'menu', text: 'Меню'},
      { src: '../../images/tab-bar/map.png', alt: 'map', text: 'Офисы', link: '#'},
      { src: '../../images/tab-bar/login.png', alt: 'login', text: 'Войти', link: '#'}
    ]

  .tab-bar(class=allMods)&attributes(attributes).tablet-disp
    .tab-bar__content
      each tabBarItem in tabBarMenu
        if tabBarItem.link
          a(href=tabBarItem.link).tab-bar__item
            .tab-bar__image
              img(src=tabBarItem.src, alt=tabBarItem.alt)
            +ui-p4(tabBarItem.text)
        else
          .tab-bar__item.tab-bar__main
            .tab-bar__image
              img(src=tabBarItem.src, alt=tabBarItem.alt)
            +ui-p4(tabBarItem.text)
    